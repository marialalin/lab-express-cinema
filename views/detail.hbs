<div>
  

  <img src="{{movie.image}}" alt="" />
  <h1>{{movie.title}}</h1>

  <h2>Director: {{movie.director}}</h2>

  <h3>Stars</h3>
  {{#each movie.stars as |star|}}
    <li>{{star}}</li>
  {{/each}}

  <p>{{movie.description}}</p>
  <p>
    {{#each movie.showtimes as |hour|}}
      {{hour}} | 
    {{/each}}
  </p>
</div>